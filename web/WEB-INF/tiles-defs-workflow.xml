<?xml version="1.0" encoding="ISO-8859-1" ?>
    
    <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
       "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
    
<tiles-definitions>
    <!-- main layout definition for the workflow content page inside caLAB -->
	<definition name="workflow.content.home" path="/layout/workflowLayout.jsp">
		<put name="workflowActionMenu" value="/workflow/actionMenu.jsp"/>
	</definition>
	
    <!-- definitions for the use aliquot page -->
    <definition name="workflow.usealiquot.content" extends="workflow.content.home">
        <put name="workflowContent" value="/workflow/bodyUseAliquot.jsp"/>
    </definition>
    
    <definition name="workflow.usealiquot" extends="calab.home">
        <put name="calabContent" value="workflow.usealiquot.content"/>
        <put name="calabSidemenu" value="/workflow/sideMenuTree.jsp"/>
    </definition>
    
    <!-- definitions for the create run page -->    
    <definition name="workflow.createrun.content" extends="workflow.content.home">
        <put name="workflowContent" value="/workflow/bodyCreateRun.jsp"/>
    </definition>
    
    <definition name="workflow.createrun" extends="calab.home">
        <put name="calabContent" value="workflow.createrun.content"/>
        <put name="calabSidemenu" value="/workflow/sideMenuTree.jsp"/>
    </definition>
    
    <!-- definitions for the workflow message page -->
    <definition name="workflow.message.content" extends="workflow.content.home">
        <put name="workflowContent" value="/bodyMessage.jsp?bundle=workflow"/>
    </definition>    
    <definition name="workflow.message" extends="calab.home">
        <put name="calabContent" value="workflow.message.content"/>
    </definition>    
    
</tiles-definitions>

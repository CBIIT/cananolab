<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="useAliquotForm">
			<field property="assignedAliquots" page="1" depends="required">
				<arg position="0" key="useAliquotForm.assignedAliquots" bundle="workflow" />
			</field>
			<field property="runId" page="1" depends="required">
				<arg position="0" key="useAliquotForm.runId" bundle="workflow" />
			</field>
		</form>
		<form name="createRunForm">
			<field property="assayName" page="1" depends="required">
				<arg key="createRunForm.assay" bundle="workflow" position="0" />
			</field>
			<field property="runBy" page="1" depends="required">
				<arg key="createRunForm.runBy" bundle="workflow" position="0" />
			</field>
			<field property="assignedAliquots" page="1" depends="required">
				<arg key="createRunForm.assignedAliquots" bundle="workflow" position="0" />
			</field>
			<field property="runDate" page="1" depends="date,required">
				<arg key="createRunForm.runDate" bundle="workflow" position="0" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
		</form>
		<form name="searchWorkflowForm">
			<field property="assayRunDateBegin" page="1" depends="date">
				<arg key="searchWorkflowForm.assayRunDateBegin" bundle="workflow" position="0" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
			<field property="assayRunDateEnd" page="1" depends="date">
				<arg key="searchWorkflowForm.assayRunDateEnd" bundle="workflow" position="0" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
			<field property="fileSubmissionDateBegin" page="1" depends="date">
				<arg key="searchWorkflowForm.fileSubmissionDateBegin" bundle="workflow" position="0" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
			<field property="fileSubmissionDateEnd" page="1" depends="date">
				<arg key="searchWorkflowForm.fileSubmissionDateEnd" bundle="workflow" position="0" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

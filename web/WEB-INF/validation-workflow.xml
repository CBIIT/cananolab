<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="useAliquotForm">
			<field property="aliquotIds" depends="required">
				<arg position="0" key="useAliquotForm.aliquotIds" bundle="workflow" />
			</field>
		</form>
		<form name="createRunForm">
			<field property="assayId" depends="required">
				<arg key="createRunForm.assay" bundle="workflow" position="0" />
			</field>
			<field property="runBy" depends="required">
				<arg key="createRunForm.runBy" bundle="workflow" position="0" />
			</field>
			<field property="runDate" depends="date,required">
				<arg key="createRunForm.runDate" bundle="workflow" position="0" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>MM/dd/yyyy</var-value>
				</var>
			</field>
		</form>
		<form name="createAssayRunForm">
			<field property="runBy" depends="required">
				<arg key="createAssayRunForm.runBy" bundle="workflow" position="0" />
			</field>
			<field property="runDate" depends="date,required">
				<arg key="createAssayRunForm.runDate" bundle="workflow" position="0" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>MM/dd/yyyy</var-value>
				</var>
			</field>
		</form>
		<form name="maskFileForm">
			<field property="description" depends="required">
				<arg key="maskFileForm.description" bundle="workflow" position="0" />
			</field>
		</form>
		<form name="maskAliquotForm">
			<field property="description" depends="required">
				<arg key="maskAliquotForm.description" bundle="workflow" position="0" />
			</field>
		</form>
		
	</formset>
</form-validation>

<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="useAliquotForm">
			<field property="aliquotIds" depends="required">
				<arg position="0" key="useAliquotForm.aliquotIds" bundle="workflow" />
			</field>
		</form>
		<form name="executeWorkflowForm">
			<field property="runDate" depends="date">
				<arg key="executeWorkflowForm.runDate" bundle="workflow" position="0" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>MM/dd/yyyy</var-value>
				</var>
			</field>
			<field property="runBy" depends="date,required">
				<arg key="executeWorkflowForm.runDate" bundle="workflow" position="0" />
				<var>
					<var-name>datePatternStrict</var-name>
					<var-value>MM/dd/yyyy</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://struts.apache.org/dtds/tiles-config_1_1.dtd">
<tiles-definitions>
	<!-- definition for the manage publication page -->
	<definition name="publication.managePublication" extends="calab.home">
		<put name="calabContent" value="/bodyManageItem.jsp" />
		<put name="menu" value="publications" />
		<put name="item" value="Publication" />
		<put name="itemDescription"
			value="/publication/bodyPublicationDescription.jsp" />
		<put name="createLink"
			value="submitPublication.do?dispatch=setup&amp;page=0" />
		<put name="searchLink" value="searchPublication.do?dispatch=setup" />
	</definition>
	
	<definition name="publication.choosePublication" extends="calab.home">
		<put name="calabContent" value="/publication/bodyChoosePublication.jsp" />
		<put name="menu" value="publications" />		
	</definition>
	
	<definition name="publication.message" extends="calab.home">
		<put name="calabContent" value="/bodyMessage.jsp?bundle=publication" />
		<put name="menu" value="publications" />
	</definition>

	<definition name="publication.submitPublication" extends="calab.home">
		<put name="calabContent" value="/publication/bodySubmitPublication.jsp" />
		<put name="menu" value="publications" />
		<put name="onloadJavascript" value="radLinkOrUpload()"/>
	</definition>
	<definition name="publication.submitPublicationPubmed" extends="calab.home">
		<put name="calabContent" value="/publication/bodySubmitPublicationPubmedReadOnly.jsp" />
		<put name="menu" value="publications" />
		<put name="onloadJavascript" value="radLinkOrUpload()"/>
	</definition>
	<!-- definition for the search publication page -->
	<definition name="publication.searchPublication" extends="calab.home">
		<put name="calabContent" value="/publication/bodySearchPublication.jsp" />
		<put name="menu" value="publications" />
	</definition>

	<definition name="publication.viewPublication" extends="calab.home">
		<put name="calabContent" value="/publication/bodyViewPublicationFile.jsp" />
		<put name="menu" value="publications" />
		<put name="publicationActionName" value="updatePublication" />
	</definition>
	
	<definition name="publication.detailViewPublication" extends="calab.home">
		<put name="calabContent" value="/publication/bodyPublicationDetailView.jsp" />
		<put name="menu" value="publications" />
	</definition>
	
	<!-- definition for the search publication result page -->
	<definition name="publication.searchPublicationResult"
		extends="calab.home">
		<put name="calabContent"
			value="/publication/bodySearchPublicationResult.jsp" />
		<put name="menu" value="publications" />
	</definition>

	<definition name="publication.remoteSearchPublication"
		extends="calab.home">
		<put name="calabContent"
			value="/publication/bodyRemoteSearchPublication.jsp" />
		<put name="menu" value="publications" />
	</definition>

	<!-- definition for the remote search publication result page -->
	<definition name="publication.remoteSearchPublicationResult"
		extends="calab.home">
		<put name="calabContent"
			value="/publication/bodyRemoteSearchPublicationResult.jsp" />
		<put name="menu" value="publications" />
	</definition>
</tiles-definitions>


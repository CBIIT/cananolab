<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<display-name>caNanoLab</display-name>
	<form-beans>
		<form-bean name="initSessionForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="forwardPage" type="java.lang.String" />
		</form-bean>
		<form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="loginId" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
		</form-bean>
		<form-bean name="updatePasswordForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="loginId" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
			<form-property name="newPassword" type="java.lang.String" />
			<form-property name="newPassword2" type="java.lang.String" />
		</form-bean>
	</form-beans>
	<global-exceptions>
		<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.session.expired" path="/index.jsp" type="gov.nih.nci.calab.exception.InvalidSessionException" />
		<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.noaccess" path="/index.jsp" type="gov.nih.nci.calab.exception.NoAccessException" />
	</global-exceptions>
	<action-mappings>
		<action name="loginForm" path="/login" scope="request" type="gov.nih.nci.calab.ui.security.LoginAction" input="input">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.login" path="/index.jsp" type="java.lang.Exception" />
			<forward name="success" path="calab.welcome" />
			<forward name="input" path="calab.login" />
			<forward name="changePassword" path="calab.password" />
		</action>
		<action name="updatePasswordForm" path="/updatePassword" scope="request" type="gov.nih.nci.calab.ui.security.UpdatePasswordAction" input="input">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.password" path="calab.password" type="java.lang.Exception" />
			<forward name="success" path="calab.login" />
			<forward name="input" path="calab.password" />
		</action>
		<action path="/logout" scope="request" type="gov.nih.nci.calab.ui.security.LogoutAction">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.logout" path="home.error" type="java.lang.Exception" />
			<forward name="success" path="calab.login" />
		</action>
	</action-mappings>

	<controller>
		<set-property value="true" property="inputForward" />
		<set-property property="processorClass" value="gov.nih.nci.calab.ui.core.CustomRequestProcessor" />
	</controller>
	<message-resources parameter="gov.nih.nci.calab.resources.application" null="false" />
	<message-resources key="sample" parameter="gov.nih.nci.calab.resources.sample" null="false" />
	<message-resources key="protocol" parameter="gov.nih.nci.calab.resources.protocol" null="false" />
	<message-resources key="particle" parameter="gov.nih.nci.calab.resources.particle" null="false" />
	<message-resources key="report" parameter="gov.nih.nci.calab.resources.report" null="false" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config"
			value="/WEB-INF/tiles-defs.xml,       												   
                   /WEB-INF/tiles-defs-sample.xml,
                   /WEB-INF/tiles-defs-protocol.xml,
                   /WEB-INF/tiles-defs-particle.xml,
                   /WEB-INF/tiles-defs-report.xml" />
		<set-property property="definitions-debug" value="2" />
		<set-property property="definitions-parser-details" value="2" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="stopOnFirstError" value="false" />
		<set-property property="pathnames"
			value="/WEB-INF/validation.xml,
			      /WEB-INF/validation-sample.xml, 
			      /WEB-INF/validation-particle.xml,             
                  /WEB-INF/validator-rules.xml" />
	</plug-in>
	<plug-in className="gov.nih.nci.calab.ui.core.CustomPlugIn"/>	
</struts-config>

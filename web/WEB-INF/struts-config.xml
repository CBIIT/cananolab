<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<display-name>caLAB</display-name>
	<form-beans>
		<form-bean name="initSessionForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="forwardPage" type="java.lang.String" />
		</form-bean>
		<form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="loginId" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
		</form-bean>
		<form-bean name="registerForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="title" type="java.lang.String" />
			<form-property name="firstName" type="java.lang.String" />
			<form-property name="middleName" type="java.lang.String" />
			<form-property name="lastName" type="java.lang.String" />
			<form-property name="email" type="java.lang.String" />
			<form-property name="phoneNumber" type="java.lang.String" />
			<form-property name="organization" type="java.lang.String" />
			<form-property name="department" type="java.lang.String" />
			<form-property name="loginId" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
			<form-property name="password2" type="java.lang.String" />
		</form-bean>		
	</form-beans>
	<global-exceptions>
		<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.login.required" path="/index.jsp" type="gov.nih.nci.calab.exception.InvalidSessionException" />
	</global-exceptions>
	<action-mappings>
		<action name="initSessionForm" path="/initSession" scope="request" parameter="forwardPage" type="gov.nih.nci.calab.ui.core.InitSessionAction">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.initSession" path="calab.error" type="java.lang.Exception" />
		</action>
		<action name="loginForm" path="/login" scope="request" type="gov.nih.nci.calab.ui.security.LoginAction" input="input">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.login" path="/index.jsp" type="java.lang.Exception" />
			<forward name="success" path="calab.welcome" />
			<forward name="input" path="calab.home" />
		</action>
		<action name="registerForm" parameter="method" path="/register" scope="request" type="gov.nih.nci.calab.ui.security.RegisterAction" input="input">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.register" path="calab.register" type="java.lang.Exception" />
			<forward name="registrationSetup" path="calab.register" />
			<forward name="success" path="calab.register" />
			<forward name="input" path="calab.register" />
		</action>
		<action path="/logout" scope="request" type="gov.nih.nci.calab.ui.security.LogoutAction">
			<exception handler="gov.nih.nci.calab.ui.core.BaseExceptionHandler" key="error.logout" path="calab.error" type="java.lang.Exception" />
			<forward name="success" path="calab.home" />
		</action>
		<action path="/registerSetup" type="org.apache.struts.actions.ForwardAction" parameter="calab.register" scope="request" />
		
	</action-mappings>

	<controller>
		<set-property value="true" property="inputForward" />
	</controller>
	<message-resources parameter="gov.nih.nci.calab.resources.application" null="false" />
	<message-resources key="workflow" parameter="gov.nih.nci.calab.resources.workflow" null="false" />
	<message-resources key="administration" parameter="gov.nih.nci.calab.resources.administration" null="false" />
	<message-resources key="search" parameter="gov.nih.nci.calab.resources.search" null="false" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config"
			value="/WEB-INF/tiles-defs.xml,       												   
			       /WEB-INF/tiles-defs-workflow.xml,
                   /WEB-INF/tiles-defs-administration.xml,
                   /WEB-INF/tiles-defs-search.xml" />
		<set-property property="definitions-debug" value="2" />
		<set-property property="definitions-parser-details" value="2" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="stopOnFirstError" value="false" />
		<set-property property="pathnames"
			value="/WEB-INF/validation.xml,
			      /WEB-INF/validation-workflow.xml , 
			      /WEB-INF/validation-administration.xml , 
                  /WEB-INF/validation-search.xml ,               
                  /WEB-INF/validator-rules.xml" />
	</plug-in>
</struts-config>

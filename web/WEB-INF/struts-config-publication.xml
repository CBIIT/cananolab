<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="submitPublicationForm"
			type="gov.nih.nci.cananolab.ui.publication.SubmitPublicationForm">
			<form-property name="dispatch" type="java.lang.String" />
			<form-property name="page" type="java.lang.Integer"
				initial="0" />
			<form-property name="file"
				type="gov.nih.nci.cananolab.dto.common.PublicationBean" />
			<form-property name="idsToDelete" type="java.lang.String[]" />
		</form-bean>
		
		<form-bean name="searchPublicationForm"
			type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="particleSampleBean"
				type="gov.nih.nci.cananolab.dto.particle.ParticleBean" />
			<form-property name="publicationOrReport"
				type="java.lang.String[]" />
			<form-property name="researchArea"
				type="java.lang.String[]" />
			<form-property name="nanoparticleEntityTypes"
				type="java.lang.String[]" />
			<form-property name="functionalizingEntityTypes"
				type="java.lang.String[]" />
			<form-property name="functionTypes"
				type="java.lang.String[]" />
			<form-property name="title" type="java.lang.String" />
			<form-property name="category"
				type="java.lang.String" />
			<form-property name="searchLocations"
				type="java.lang.String[]"/>			
			<form-property name="authorsStr" type="java.lang.String" />
			<form-property name="pubMedId" type="java.lang.String" />
			<form-property name="digitalObjectId" type="java.lang.String" />			
			<form-property name="keywordsStr" type="java.lang.String" />
			<form-property name="nanoparticleName" type="java.lang.String" />
			<form-property name="page" type="java.lang.Integer"
				initial="0" />
		</form-bean>
	</form-beans>
	<global-exceptions>
		<exception
			handler="gov.nih.nci.cananolab.ui.core.BaseExceptionHandler"
			bundle="publication" key="error.publicationException" path="publication.message"
			type="gov.nih.nci.cananolab.exception.PublicationException" />
	</global-exceptions>
	<global-forwards>
		<forward name="publicationMessage" path="publication.message" />
		<forward name="reportDetailPrintView"
			path="/publication/bodyReportDetailPrintView.jsp" />
		<forward name="publicationDetailPrintView"
			path="/publication/bodyPublicationDetailPrintView.jsp" />
		<forward name="publicationSummaryPrintView"
			path="/publication/bodyPublicationSummaryPrintView.jsp" />
	</global-forwards>
	<action-mappings>		
		<action name="submitPublicationForm" parameter="dispatch"
			path="/submitPublication"
			type="gov.nih.nci.cananolab.ui.publication.SubmitPublicationAction"
			input="input">
			<forward name="success" path="publication.message" />
			<forward name="particleSuccess" path="particle.annotationMessage" />
			<forward name="input"
				path="/submitPublication.do?dispatch=input&amp;page=0" />
			<forward name="view" path="publication.viewPublication" />
			<forward name="particleDetailView" path="particle.detailViewPublication" />
			<forward name="publicationDetailView" path="publication.detailViewPublication" />
			<forward name="publicationSubmitPublication"
				path="publication.submitPublication" />
			<forward name="particleSubmitPublication"
				path="particle.submitPublication" />
			<forward name="publicationSubmitPubmedPublication"
				path="publication.submitPublicationPubmed" />
			<forward name="particleSubmitPubmedPublication"
				path="particle.submitPublicationPubmed" />
			<forward name="particleViewPublication"
				path="particle.viewPublication" />
			<forward name="particleSuccess"
				path="particle.annotationMessage" />
		</action>
		<action path="/publicationResults"
			type="gov.nih.nci.cananolab.ui.core.BaseForwardAction"
			parameter="publication.searchPublicationResult" scope="request" />
		<action input="input" name="searchPublicationForm"
			parameter="dispatch" path="/searchPublication"
			type="gov.nih.nci.cananolab.ui.publication.SearchPublicationAction"
			scope="request">
			<forward name="input" path="publication.searchPublication" />
			<forward name="success" path="publication.searchPublicationResult" />
			<forward name="publicationView" path="particle.publicationInfo" />
		</action>		
		<action path="/managePublication"
			type="gov.nih.nci.cananolab.ui.core.BaseForwardAction"
			parameter="publication.managePublication" scope="request" />
		<action path="/choosePublication"
			type="gov.nih.nci.cananolab.ui.core.BaseForwardAction"
			parameter="publication.choosePublication" scope="request" />
		<action path="/chooseParticlePublication"
			type="gov.nih.nci.cananolab.ui.core.BaseForwardAction"
			parameter="particle.choosePublication" scope="request" />
	</action-mappings>
</struts-config>


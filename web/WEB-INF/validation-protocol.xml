<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="protocolForm">
			<field property="protocol.domain.name" page="1"
				depends="required, mask">
				<arg position="0" key="protocol.name" bundle="protocol" />
				<msg name="mask" key="protocol.name.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
			<field property="protocol.domain.type" page="1"
				depends="required">
				<arg position="0" key="protocol.type" bundle="protocol" />
			</field>
			<field property="protocol.domain.version" page="1" depends="required">
				<arg position="0" key="protocol.version"
					bundle="protocol" />
			</field>
			<field property="protocol.fileBean.domainFile.title" page="1" depends="mask">
				<arg position="0" key="protocol.title" bundle="protocol" />
				<msg name="mask" key="protocol.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s\(\)]*$</var-value>
				</var>
			</field>
		</form>
		<form name="searchProtocolForm">
			<field property="protocolName" page="1" depends="mask">
				<arg position="0" key="protocol.name" bundle="protocol" />
				<msg name="mask" key="protocol.name.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
			<field property="protocolType" page="1" depends="mask">
				<arg position="0" key="protocol.type" bundle="protocol" />
				<msg name="mask" key="protocol.type.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
			<field property="fileTitle" page="1" depends="mask">
				<arg position="0" key="protocol.title"
					bundle="protocol" />
				<msg name="mask" key="protocol.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s\(\)]*$</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

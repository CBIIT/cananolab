<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="submitPublicationForm">
			<field property="file.particleNames" page="2"
				depends="required">
				<arg position="0" key="submitPublicationForm.particleNames"
					bundle="report" />
			</field>
			<field property="file.domainFile.category" page="2"
				depends="required">
				<arg position="0" key="submitPublicationForm.file.category"
					bundle="report" />
			</field>
			<field property="file.externalUrl" page="2"
				depends="validwhen">
				<arg position="0" key="submitPublicationForm.externalUrl"
					bundle="report" />
				<var>
					<var-name>test</var-name>
					<var-value>
						(((file.domainFile.uri!=null) or
						((*this*!=null) and
						(file.domainFile.uriExternal=="true"))) or
						(file.domainFile.uriExternal=="false"))
					</var-value>
				</var>
			</field>
			<field property="file.uploadedFile" page="2"
				depends="validwhen">
				<arg position="0" key="submitPublicationForm.reportFile"
					bundle="document" />
				<var>
					<var-name>test</var-name>
					<var-value>
						(((file.domainFile.uri!=null) or
						((*this*!=null) and
						(file.domainFile.uriExternal=="false"))) or
						(file.domainFile.uriExternal=="true"))
					</var-value>
				</var>
			</field>
			<field property="file.domainFile.title" page="1"
				depends="required,mask">
				<arg position="0" key="document.title" bundle="document" />
				<msg name="mask" key="document.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
		</form>

		<form name="searchDocumentForm">
			<field property="reportTitle" page="1" depends="mask">
				<arg position="0" key="document.title" bundle="document" />
				<msg name="mask"
					key="document.domainFile.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
			<field property="publicationCategory" page="1" depends="mask">
				<arg position="0" key="document.category" bundle="report" />
				<msg name="mask" key="document.category.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

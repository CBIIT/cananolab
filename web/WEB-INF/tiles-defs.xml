			<item value="SUBMIT" link="" />
			<item value="ADMINISTRATION" link="" />
		</putList>
	</definition>
	<definition name="home.error" extends="calab.index">
		<put name="calabContent" value="/bodyMessage.jsp" />
		<put name="menu" value="HOME" />
	</definition>
	<definition name="calab.help" extends="calab.index">
		<put name="calabContent" value="/help/bodyOnlineHelp.jsp" />
		<put name="menu" value="help" />
	</definition>
	<definition name="calab.welcome" extends="calab.index">
		<put name="calabContent" value="/bodyWelcome.jsp" />
		<put name="menu" value="home" />
	</definition>
	<definition name="calab.password" extends="calab.home">
		<put name="calabContent" value="/bodyUpdatePassword.jsp" />
		<put name="menu" value="home" />
	</definition>
	<definition name="calab.disclaimer" path="/layout/disclaimerLayout.jsp">

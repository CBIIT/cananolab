<tiles-definitions>
	<!--  Main layout definition for the home page of caLAB -->
	<definition name="calab.index" path="/layout/mainLayoutNoContentSpace.jsp">
		<put name="title" value="caLAB Home" />
		<put name="nciHeader" value="/html/nciHeader.html" />
		<put name="calabHeader" value="/html/calabHeader.html" />
		<put name="calabSidemenu" value="/html/calabBaseSidemenu.html" />
		<put name="calabMainmenu" value="/calabMainmenu.jsp" />
		<put name="calabContent" value="/bodyLogin.jsp" />
		<put name="calabFooter" value="/html/calabFooter.html" />
		<put name="nciFooter" value="/html/nciFooter.html" />
		<put name="menu" value="home" />
		<putList name="alwaysShowItems">
			<item value="HOME" link="index.jsp" />
			<item value="HELP" link="javascript:openHelpWindow('webHelp/caLAB_0.5/index.html')" />
			<item value="LOGOUT" link="logout.do" />
		</putList>
		<putList name="items">
			<item value="WORKFLOW" link="" />
			<item value="INVENTORY" link="" />
			<item value="SEARCH" link="" />
			<item value="NANOPARTICLE SEARCH" link="searchNanoparticle.do?dispatch=setup&amp;page=0" />
			<item value="SUBMIT" link="" />
			<item value="ADMINISTRATION" link="" />
		</putList>
	</definition>
	<definition name="calab.home" path="/layout/mainLayout.jsp">
		<put name="title" value="caLAB Home" />
		<put name="nciHeader" value="/html/nciHeader.html" />
		<put name="calabHeader" value="/html/calabHeader.html" />
		<put name="calabSidemenu" value="/html/calabBaseSidemenu.html" />

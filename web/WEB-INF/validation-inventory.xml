				<arg position="0" key="createSampleForm.quantity" bundle="inventory" />
			</field>
			<field property="concentration" depends="float" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.concentration" bundle="inventory" />
			</field>
			<field property="volume" depends="float" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.volume" bundle="inventory" />
			</field>
			<field property="quantityUnit" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.quantityUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].quantity==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="concentrationUnit" depends="validwhen" indexedListProperty="containers">

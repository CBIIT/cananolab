			</field>
			<field property="template.container.solvent" page="1" depends="validwhen">
				<arg position="0" key="createAliquotForm.concentrationSolvent" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((template.container.concentration==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="template.container.concentration" page="1" depends="validwhen">
				<arg position="0" key="createAliquotForm.solventConcentration" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((template.container.solvent==null) or (*this*!=null))</var-value>
				</var>
			</field>

			<field property="template.container.quantity" page="1" depends="float">
				<arg position="0" key="createAliquotForm.quantity" bundle="inventory" />
			</field>
			<field property="template.container.concentration" page="1" depends="float">
				<arg position="0" key="createAliquotForm.concentration" bundle="inventory" />
			</field>
			<field property="template.container.volume" page="1" depends="float">
				<arg position="0" key="createAliquotForm.volume" bundle="inventory" />
			</field>
			<field property="template.container.quantityUnit" page="1" depends="validwhen">
				<arg position="0" key="createAliquotForm.quantityUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((template.container.quantity==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="template.container.concentrationUnit" page="1" depends="validwhen">
				<arg position="0" key="createAliquotForm.concentrationUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((template.container.concentration==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="template.container.volumeUnit" page="1" depends="validwhen">
				<arg position="0" key="createAliquotForm.volumeUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((template.container.volume==null) or (*this*!=null))</var-value>
				</var>
			</field>
		</form>


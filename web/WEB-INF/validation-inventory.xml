				</var>
			</field>
			<field property="concentration" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.solventConcentration" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].solvent==null) or (*this*!=null))</var-value>
				</var>
			</field>

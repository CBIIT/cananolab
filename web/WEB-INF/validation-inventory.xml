					<var-name>min</var-name>
					<var-value>0</var-value>
				</var>
				<var>
					<var-name>max</var-name>
					<var-value>100</var-value>
				</var>
			</field>

			<field property="sampleType" depends="validwhen">
				<arg position="0" key="createSampleForm.sampleType" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((otherSampleType==null) or (*this*!=null))</var-value>
				</var>
			</field>
			
			<field property="otherSampleType" depends="validwhen">
				<arg position="0" key="createSampleForm.otherSampleType" bundle="inventory" />
				<var>
					<var-name>test</var-name>

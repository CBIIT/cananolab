<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="createSampleForm">
			<field property="sampleNamePrefix" page="1" depends="required">
				<arg position="0" key="createSampleForm.sampleNamePrefix" bundle="inventory" />
			</field>
			<field property="sampleType" page="1" depends="required">
				<arg position="0" key="createSampleForm.sampleType" bundle="inventory" />
			</field>
			<field property="sampleSource" page="1" depends="required">
				<arg position="0" key="createSampleForm.sampleSource" bundle="inventory" />
			</field>
			<field property="lotId" page="1" depends="required">
				<arg position="0" key="createSampleForm.lotId" bundle="inventory" />
			</field>
			<field property="dateReceived" page="1" depends="date">
				<arg position="0" key="createSampleForm.dateReceived" bundle="inventory" />
				<var>
					<var-name>datePattern</var-name>
					<var-value>MM/dd/yy</var-value>
				</var>
			</field>
			<field property="numberOfContainers" page="0" depends="integer,intRange">
				<arg position="0" key="createSampleForm.numberOfContainers" bundle="inventory" />
				<arg position="1" name="intRange" key="${var:min}" resource="false" bundle="inventory" />
				<arg position="2" name="intRange" key="${var:max}" resource="false" bundle="inventory" />
				<var>
					<var-name>min</var-name>
					<var-value>1</var-value>
				</var>
				<var>
					<var-name>max</var-name>
					<var-value>100</var-value>
				</var>
			</field>
			<field property="containerType" page="1" depends="required" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.containerType" bundle="inventory" />
			</field>
			<field property="otherContainerType" page="1" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.otherContainerType" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].containerType!="Other") or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="solvent" page="0" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.concentrationSolvent" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].concentration==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="concentration" page="0" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.solventConcentration" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].solvent==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="quantity" page="0" depends="float" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.quantity" bundle="inventory" />
			</field>
			<field property="concentration" page="0" depends="float" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.concentration" bundle="inventory" />
			</field>
			<field property="volume" page="0" depends="float" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.volume" bundle="inventory" />
			</field>
			<field property="quantityUnit" page="0" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.quantityUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].quantity==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="concentrationUnit" page="0" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.concentrationUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].concentration==null) or (*this*!=null))</var-value>
				</var>
			</field>
			<field property="volumeUnit" page="0" depends="validwhen" indexedListProperty="containers">
				<arg position="0" key="createSampleForm.volumeUnit" bundle="inventory" />
				<var>
					<var-name>test</var-name>
					<var-value>((containers[].volume==null) or (*this*!=null))</var-value>
				</var>
			</field>
		</form>

		<form name="createAliquotForm">
			<field property="containerName" page="1" depends="validwhen">

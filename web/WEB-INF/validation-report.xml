<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="submitReportForm">
			<field property="particleNames" page="2"
				depends="required">
				<arg position="0" key="submitReportForm.particleID"
					bundle="report" />
			</field>
			<field property="file.type" page="2" depends="required">
				<arg position="0" key="submitReportForm.reportType"
					bundle="report" />
			</field>
			<field property="uploadedFile" page="2"
				depends="required">
				<arg position="0" key="submitReportForm.reportFile"
					bundle="report" />
			</field>
			<field property="file.title" page="1"
				depends="required,mask">
				<arg position="0" key="report.title" bundle="report" />
				<msg name="mask" key="report.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
		</form>
		<form name="searchReportForm">
			<field property="reportTitle" page="1" depends="mask">
				<arg position="0" key="report.title" bundle="report" />
				<msg name="mask" key="report.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
			<field property="particleType" page="1" depends="mask">
				<arg position="0" key="report.particleType"
					bundle="report" />
				<msg name="mask" key="report.particleType.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
		</form>
		<form name="remoteSearchReportForm">
			<field property="reportTitle" page="1" depends="mask">
				<arg position="0" key="report.title" bundle="report" />
				<msg name="mask" key="report.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
			<field property="particleType" page="1" depends="mask">
				<arg position="0" key="report.particleType"
					bundle="report" />
				<msg name="mask" key="report.particleType.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

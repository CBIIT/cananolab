<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="submitReportForm">
			<field property="file.particleNames" page="2"
				depends="required">
				<arg position="0" key="submitReportForm.particleNames"
					bundle="report" />
			</field>			
			<field property="file.externalUrl" page="2"
				depends="validwhen">
				<arg position="0" key="submitReportForm.externalUrl"
					bundle="report" />
				<var>
					<var-name>test</var-name>
					<var-value>
						(((file.domainFile.uri!=null) or
						((*this*!=null) and
						(file.domainFile.uriExternal=="true"))) or
						(file.domainFile.uriExternal=="false"))
					</var-value>
				</var>
			</field>
			<field property="file.uploadedFile" page="2"
				depends="validwhen">
				<arg position="0" key="submitReportForm.reportFile"
					bundle="report" />
				<var>
					<var-name>test</var-name>
					<var-value>
						(((file.domainFile.uri!=null) or
						((*this*!=null) and
						(file.domainFile.uriExternal=="false"))) or
						(file.domainFile.uriExternal=="true"))
					</var-value>
				</var>
			</field>
			<field property="file.domainFile.title" page="2"
				depends="required,mask">
				<arg position="0" key="report.title" bundle="report" />
				<msg name="mask" key="report.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\s]*$</var-value>
				</var>
			</field>
		</form>
		<form name="searchReportForm">
			<field property="reportTitle" page="1" depends="mask">
				<arg position="0" key="report.title" bundle="report" />
				<msg name="mask"
					key="report.domainFile.title.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
			<field property="reportCategory" page="1" depends="mask">
				<arg position="0" key="report.category" bundle="report" />
				<msg name="mask" key="report.category.invalid" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[a-zA-Z0-9\-\_\*\s]*$</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

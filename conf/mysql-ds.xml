<datasources>
  <local-tx-datasource>
    <jndi-name>caNanoLab</jndi-name>
    <connection-url>jdbc:mysql://@@DBSERVER@:@PORT@/@DBNAME@</connection-url>
    <user-name>@DBUSER@</user-name>
    <password>@DBPASSWORD@</password>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
  </local-tx-datasource>
</datasources>

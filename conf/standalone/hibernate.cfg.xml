<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Properties for the session factory -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://DATABASE_HOST:DATABASE_PORT/canano</property>
		<property name="connection.username">DATABASE_USER</property>
		<property name="connection.password">DATABASE_PASSWORD</property>
		<property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="c3p0.max_size">10</property>
		<property name="c3p0.min_size">2</property>
		<property name="c3p0.timeout">5000</property>
		<property name="c3p0.max_statements">100</property>
		<property name="c3p0.idle_test_period">3000</property>
		<property name="c3p0.acquire_increment">2</property>
		<property name="c3p0.validate">false</property>
		<property name="show_sql">false</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="max_fetch_depth">1</property>
		<property name="bytecode.use_reflection_optimizer">false</property>
		<property name="jdbc.batch_versioned_data">true</property>
		<property name="jdbc.use_streams_for_binary">true</property>
		<property name="cache.use_query_cache">false</property>
		<property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>

		<!-- Mapped Resources -->
		<mapping resource="gov/nih/nci/cananolab/domain/common/Keyword.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/Instrument.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/Technique.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/Author.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/Organization.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/CommonLookup.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/PointOfContact.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/Protocol.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/common/File.hbm.xml" />		
		<mapping resource="gov/nih/nci/cananolab/domain/particle/characterization/ExperimentConfig.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/NanoparticleSample.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/characterization/Characterization.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/characterization/physical/SurfaceChemistry.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/SampleComposition.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/Target.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/Function.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/base/NanoparticleEntity.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/chemicalassociation/AssociatedElement.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/chemicalassociation/ChemicalAssociation.hbm.xml" />
		<mapping resource="gov/nih/nci/cananolab/domain/particle/samplecomposition/functionalization/ActivationMethod.hbm.xml" />
	</session-factory>
</hibernate-configuration>


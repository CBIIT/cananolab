<?xml version="1.0" encoding="utf-8" ?>
<project name="caNanoLab-grid-deploy" default="deploy-grid" basedir=".">
	<property environment="env" />
	<property name="build.dir" value="${basedir}/grid-build" />
	<property name="jboss.server.name" value="default" />
	<property name="jboss.server.dir" value="${env.JBOSS_HOME}/server/${jboss.server.name}" />
	<property name="jboss.conf.dir" value="${jboss.server.dir}/conf" />
	<property name="jboss.deploy.dir" value="${jboss.server.dir}/deploy" />

	<target name="prepare-globus-lib">
		<!-- unpack required globus libraries for jboss to JBoss -->
		<unzip dest="${jboss.server.dir}/lib" src="conf/gridservice/globus_jboss_lib.zip" />
	</target>
	<target name="deploy-grid">
		<copy todir="${jboss.deploy.dir}" file="${build.dir}/wsrf.war" />
	</target>
</project>
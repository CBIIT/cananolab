<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<import resource="application-config.xml" />
	<import resource="application-config-security.xml" />

	<!-- Used only by the client and not the server components -->
	<bean id="ServiceInfo" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="APPLICATION_SERVICE_BEAN"
					value="applicationService" />
				<!--
					<entry key="AUTHENTICATION_SERVICE_BEAN" value-ref="authenticationProvider"/>
				-->
			</map>
		</constructor-arg>
	</bean>

	<bean id="interceptor"
		class="gov.nih.nci.system.client.proxy.ApplicationServiceProxy"
		singleton="false">
		<property name="proxyFactory">
			<bean
				class="gov.nih.nci.system.client.proxy.ProxyHelperImpl"
				singleton="false" />
		</property>
	</bean>

	<bean id="ServiceInfoWithInterceptor" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="APPLICATION_SERVICE_BEAN"
					value="applicationServiceWithInterceptor" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="applicationService"
		class="org.springframework.aop.framework.ProxyFactoryBean"
		singleton="false">
		<property name="target">
			<ref bean="ApplicationServiceImpl" />
		</property>
		<!-- 
			<property name="interceptorNames" value="interceptor"/>
		-->
		<property name="interfaces"
			value="gov.nih.nci.cananolab.system.applicationservice.CustomizedApplicationService" />
	</bean>

	<bean id="applicationServiceWithInterceptor"
		class="org.springframework.aop.framework.ProxyFactoryBean"
		singleton="false">
		<property name="target">
			<ref bean="ApplicationServiceImpl" />
		</property>
		<property name="interceptorNames" value="interceptor" />
		<property name="interfaces"
			value="gov.nih.nci.cananolab.system.applicationservice.CustomizedApplicationService" />
	</bean>

</beans>
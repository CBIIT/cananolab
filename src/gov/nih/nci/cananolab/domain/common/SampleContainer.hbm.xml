<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.common" auto-import="false">
	<class name="SampleContainer" table="sample_container" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="sample_container_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<discriminator column="discriminator" type="string"/>
		<!-- Attributes mapping for the SampleContainer class -->
		<property name="barcode" type="string" column="barcode"/>
		<property name="comments" type="string" column="comments"/>
		<property name="concentration" type="float" column="concentration"/>
		<property name="concentrationUnit" type="string" column="concentration_unit"/>
		<property name="containerType" type="string" column="container_type"/>
		<property name="createdBy" type="string" column="created_by"/>
		<property name="createdDate" type="java.util.Date" column="created_date"/>
		<property name="diluentsSolvent" type="string" column="diluents_solvent"/>
		<property name="name" type="string" column="name"/>
		<property name="quantity" type="float" column="quantity"/>
		<property name="quantityUnit" type="string" column="quantity_unit"/>
		<property name="safetyPrecaution" type="string" column="safety_precautions"/>
		<property name="storageCondition" type="string" column="storage_conditions"/>
		<property name="volume" type="float" column="volume"/>
		<property name="volumeUnit" type="string" column="volume_unit"/>
		<!-- Associations mapping for the SampleContainer class -->
		<set name="storageElementCollection" table="sample_container_storage" lazy="false" inverse="false">
			<cache usage="read-write" />
			<key column="sample_container_pk_id" />
			<many-to-many class="gov.nih.nci.cananolab.domain.common.StorageElement" column="storage_pk_id" />
		</set>
		<set name="aliquotCollection" lazy="true">
			<cache usage="read-write" />
			<key column="parent_sample_container_pk_id" />
			<one-to-many class="gov.nih.nci.cananolab.domain.common.Aliquot"/>
		</set>
		<subclass name="gov.nih.nci.cananolab.domain.common.Aliquot" discriminator-value="Aliquot">
			<!-- Associations mapping for the Aliquot class -->

		</subclass>
	</class>
</hibernate-mapping>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.common" auto-import="false">
	<class name="Animal" table="animal" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="animal_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<!-- Attributes mapping for the Animal class -->
		<property name="age" type="double" column="age"/>
		<property name="ageUnit" type="string" column="age_unit"/>
		<property name="behavior" type="string" column="behavior"/>
		<property name="bodyWeight" type="double" column="body_weight"/>
		<property name="bodyWeightUnit" type="string" column="body_weight_unit"/>
		<property name="caElmirID" type="long" column="caelmir_id"/>
		<property name="createdBy" type="string" column="created_by"/>
		<property name="createdDate" type="java.util.Date" column="created_date"/>
		<property name="description" type="string" column="description"/>
		<property name="disposition" type="string" column="disposition"/>
		<property name="dispositionDate" type="java.util.Date" column="disposition_date"/>
		<property name="gender" type="string" column="gender"/>
		<property name="otherId" type="string" column="other_id"/>
		<property name="reproductiveBehavior" type="string" column="reproductive_behavior"/>
		<!-- Associations mapping for the Animal class -->
		<many-to-one name="treatmentGroup" class="gov.nih.nci.cananolab.domain.common.TreatmentGroup" column="treatment_group_pk_id" lazy="proxy" />
		<many-to-one name="animalModel" class="gov.nih.nci.cananolab.domain.common.AnimalModel" column="animal_model_pk_id" lazy="proxy" />
	</class>
</hibernate-mapping>

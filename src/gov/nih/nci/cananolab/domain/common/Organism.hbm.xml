<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.common" auto-import="false">
	<class name="Organism" table="organism" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="organism_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<!-- Attributes mapping for the Organism class -->
		<property name="commonName" type="string" column="common_name"/>
		<property name="ncbiTaxonomyId" type="long" column="ncbi_taxonomy_id"/>
		<property name="scientificName" type="string" column="scientific_name"/>
		<property name="taxonomyRank" type="string" column="taxonomy_rank"/>
		<!-- Associations mapping for the Organism class -->
		<set name="animalModelCollection" lazy="true">
			<cache usage="read-write" />
			<key column="organism_pk_id" />
			<one-to-many class="gov.nih.nci.cananolab.domain.common.AnimalModel"/>
		</set>
	</class>
</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.particle.samplecomposition.chemicalassociation" auto-import="false">
	<class name="AssociatedElement" table="associated_element" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="associated_element_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<!-- Attributes mapping for the AssociatedElement class -->
		<property name="createdBy" type="string" column="created_by"/>
		<property name="createdDate" type="java.util.Date" column="created_date"/>
		<property name="description" type="string" column="description"/>
		<property name="molecularFormula" type="string" column="molecular_formula"/>
		<property name="molecularFormulaType" type="string" column="molecular_formula_type"/>
		<property name="name" type="string" column="name"/>
		<property name="value" type="float" column="value"/>
		<property name="valueUnit" type="string" column="value_unit"/>
		<!-- Associations mapping for the AssociatedElement class -->
		<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.base.ComposingElement" table="composing_element" lazy="true">
			<key column="composing_element_pk_id" />
			<!-- Attributes mapping for the ComposingElement class -->
			<property name="type" type="string" column="element_type"/>
			<!-- Associations mapping for the ComposingElement class -->
			<set name="inherentFunctionCollection" lazy="true" cascade="all-delete-orphan">
				<cache usage="read-write" />
				<key column="composing_element_pk_id" />
				<one-to-many class="gov.nih.nci.cananolab.domain.particle.samplecomposition.Function"/>
			</set>
			<many-to-one name="nanoparticleEntity" class="gov.nih.nci.cananolab.domain.particle.samplecomposition.base.NanoparticleEntity" column="nanoparticle_entity_pk_id"/>
		</joined-subclass>
		<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.FunctionalizingEntity" table="functionalizing_entity" lazy="true">
			<key column="functionalizing_entity_pk_id" />
			<!-- Associations mapping for the FunctionalizingEntity class -->
			<set name="functionCollection" lazy="true" cascade="all-delete-orphan">
				<cache usage="read-write" />
				<key column="functionalizing_entity_pk_id" />
				<one-to-many class="gov.nih.nci.cananolab.domain.particle.samplecomposition.Function"/>
			</set>
			<set name="fileCollection" table="functionalizing_entity_file" lazy="true" inverse="false" cascade="all-delete-orphan">
				<cache usage="read-write" />
				<key column="functionalizing_entity_pk_id" />
				<many-to-many class="gov.nih.nci.cananolab.domain.common.File" column="file_pk_id" />
			</set>
			<many-to-one name="activationMethod" class="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.ActivationMethod" column="activation_method_pk_id" unique="true" lazy="false" cascade="save-update,delete"/>
			<many-to-one name="sampleComposition" class="gov.nih.nci.cananolab.domain.particle.samplecomposition.SampleComposition" column="composition_pk_id" lazy="proxy" cascade="save-update"/>
			<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.Biopolymer" table="biopolymer_f" lazy="true">
				<key column="biopolymer_pk_id" />
				<!-- Attributes mapping for the Biopolymer class -->
				<property name="sequence" type="string" column="sequence"/>
				<property name="type" type="string" column="type"/>

			</joined-subclass>
			<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.OtherFunctionalizingEntity" table="other_functionalizing_entity" lazy="true">
				<key column="other_func_entity_pk_id" />
				<!-- Attributes mapping for the OtherFunctionalizingEntity class -->
				<property name="type" type="string" column="type"/>

			</joined-subclass>
			<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.SmallMolecule" table="small_molecule" lazy="true">
				<key column="small_molecule_pk_id" />
				<!-- Attributes mapping for the SmallMolecule class -->
				<property name="alternateName" type="string" column="alternate_name"/>

			</joined-subclass>
			<joined-subclass name="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.Antibody" table="antibody" lazy="true">
				<key column="antibody_pk_id" />
				<!-- Attributes mapping for the Antibody class -->
				<property name="isotype" type="string" column="isotype"/>
				<property name="species" type="string" column="species"/>
				<property name="type" type="string" column="type"/>

			</joined-subclass>

		</joined-subclass>
	</class>
</hibernate-mapping>

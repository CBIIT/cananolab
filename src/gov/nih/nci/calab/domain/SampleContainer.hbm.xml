<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain">
  <class name="SampleContainer" table="sample_container" lazy="true" polymorphism="explicit" discriminator-value="false">
    <cache usage="read-write" />
    <id name="id" type="java.lang.Long" column="sample_container_pk_id" unsaved-value="0">
       <generator class="org.hibernate.id.TableHiLoGenerator">
  	  			<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
	   </generator>
    </id>
    <discriminator column="is_derived" type="string"></discriminator>
    <property name="quantity" type="java.lang.Float" column="quantity" />
    <property name="concentration" type="java.lang.Float" column="concentration" />
    <property name="volume" type="java.lang.Float" column="volume" />
    <property name="diluentsSolvent" type="java.lang.String" column="diluents_solvent" />
    <property name="safetyPrecaution" type="java.lang.String" column="safety_precautions" />
    <property name="storageCondition" type="java.lang.String" column="storage_conditions" />
    <property name="comments" type="java.lang.String" column="comments" />
    <property name="quantityUnit" type="java.lang.String" column="quantity_unit" />
    <property name="concentrationUnit" type="java.lang.String" column="concentration_unit" />
    <property name="volumeUnit" type="java.lang.String" column="volume_unit" />
    <property name="createdBy" type="java.lang.String" column="created_by" />
    <property name="createdDate" type="java.util.Date" column="created_date" />
    <property name="barcode" type="java.lang.String" column="barcode" />
    <property name="containerType" type="java.lang.String" column="container_type" />
    <property name="createdMethod" type="java.lang.String" column="created_method" />
    <property name="name" type="java.lang.String" column="name" />
    <set name="storageElementCollection" table="container_storage_location" cascade="all-delete-orphan" lazy="true">
      <cache usage="read-write" />
      <key column="sample_container_pk_id" />
      <many-to-many class="gov.nih.nci.calab.domain.StorageElement" column="storage_pk_id" />
    </set>
    <set name="parentSampleContainerCollection" table="derived_sample_container" cascade="all-delete-orphan" lazy="true">
      <cache usage="read-write" />
      <key column="sample_container_pk_id" />
      <many-to-many class="gov.nih.nci.calab.domain.SampleContainer" column="parent_container_id" />
    </set>
    <set name="childSampleContainerCollection" table="derived_sample_container" cascade="all-delete-orphan" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="parent_container_id" />
      <many-to-many class="gov.nih.nci.calab.domain.SampleContainer" column="sample_container_pk_id" />
    </set>
    <many-to-one name="sample" class="gov.nih.nci.calab.domain.Sample" column="sample_pk_id" />
    <many-to-one name="dataStatus" class="gov.nih.nci.calab.domain.DataStatus" column="data_status_pk_id" lazy="false" />
    <subclass name="gov.nih.nci.calab.domain.Aliquot" discriminator-value="true">
    </subclass>
  </class>
</hibernate-mapping>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
	package="gov.nih.nci.calab.domain.nano.characterization.physical">
	<subclass name="Size"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Size" />
	<subclass name="MolecularWeight"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="MolecularWeight" />
	<subclass name="Morphology"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Morphology">
		<join table="morphology">
			<key column="morphology_pk_id" />
			<property name="type" type="java.lang.String" column="type" />
		</join>
	</subclass>
	<subclass name="Shape"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Shape">
		<join table="shape">
			<key column="shape_pk_id" />
			<property name="type" type="java.lang.String" column="type" />
			<component name="maxDimension"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="max_dimension" />
				<property name="unitOfMeasurement"
					column="max_dimension_unit" />
			</component>	
			<component name="minDimension"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="min_dimension" />
				<property name="unitOfMeasurement"
					column="min_dimension_unit" />
			</component>
		</join>
	</subclass>
	<subclass name="Solubility"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Solubility">
		<join table="solubility">
			<key column="solubility_pk_id" />
			<property name="solvent" type="java.lang.String"
				column="solvent" />
			<property name="isSoluble" type="java.lang.Boolean"
				column="is_soluble" />
			<component name="criticalConcentration"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="critical_concentration" />
				<property name="unitOfMeasurement"
					column="concentration_unit" />
			</component>
		</join>
	</subclass>
	<subclass name="Surface"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Surface">
		<list name="surfaceChemistryCollection"
			cascade="all-delete-orphan" lazy="false">
			<cache usage="read-write" />
			<key column="surface_pk_id" />
			<list-index column="list_index" />
			<one-to-many
				class="gov.nih.nci.calab.domain.nano.characterization.physical.SurfaceChemistry" />
		</list>
		<join table="surface">
			<key column="surface_pk_id" />
			<component name="surfaceArea"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="surface_area" />
				<property name="unitOfMeasurement"
					column="surface_area_unit" />
			</component>
			<component name="charge"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="charge" />
				<property name="unitOfMeasurement" column="charge_unit" />
			</component>
			<property name="isHydrophobic" type="java.lang.Boolean"
				column="is_hydrophobic" />
			<component name="zetaPotential"
				class="gov.nih.nci.calab.domain.Measurement">
				<property name="value" column="zeta_potential" />
				<property name="unitOfMeasurement"
					column="zeta_potential_unit" />
			</component>
		</join>
	</subclass>
	<subclass name="Purity"
		extends="gov.nih.nci.calab.domain.nano.characterization.Characterization"
		discriminator-value="Purity" />
</hibernate-mapping>

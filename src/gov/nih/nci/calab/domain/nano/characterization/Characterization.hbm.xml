<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain.nano.characterization">
	<class name="Characterization" table="characterization" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="java.lang.Long" column="characterization_pk_id" unsaved-value="0">
			<generator class="org.hibernate.id.TableHiLoGenerator">
				<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
			</generator>
		</id>
		<discriminator column="discriminator" type="java.lang.String" />
		<property name="source" type="java.lang.String" column="source" />
		<property name="classification" type="java.lang.String" column="classification" />
		<property name="description" type="java.lang.String" column="description" />
		<property name="identificationName" type="java.lang.String" column="identifier_name" />
		<property name="name" type="java.lang.String" column="name" />
		<property name="createdBy" type="java.lang.String" column="created_by" />
		<property name="createdDate" type="java.util.Date" column="created_date" />
		
		<list name="derivedBioAssayDataCollection" cascade="all-delete-orphan" lazy="true">
			<cache usage="read-write" />
			<key column="characterization_pk_id" />
			<list-index column="list_index" />
			<one-to-many class="gov.nih.nci.calab.domain.nano.characterization.DerivedBioAssayData" />
		</list>
		
		<many-to-one name="instrumentConfiguration"  class="gov.nih.nci.calab.domain.InstrumentConfiguration" column="instrument_config_pk_id" lazy="false" fetch="join"/> 
		
		<many-to-one name="protocolFile"  class="gov.nih.nci.calab.domain.ProtocolFile" column="protocol_file_pk_id" lazy="false" fetch="join"/> 
		
	</class>
</hibernate-mapping>

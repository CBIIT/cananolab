<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain.nano.particle">
   <subclass name="BaseNanoParticle" discriminator-value="nano" extends="gov.nih.nci.calab.domain.Sample">
    	<set name="functionCollection" cascade="all-delete-orphan" lazy="true" inverse="true">
     			 <cache usage="read-write" />
     			 <key column="PARTICLE_PK_ID" />
     			 <one-to-many class="gov.nih.nci.calab.domain.nano.function.Function" />
    	</set>
    	<set name="characterizationCollection" table="PARTICLE_CHARACTERIZATION" cascade="all-delete-orphan" lazy="true" inverse="true">
     			 <cache usage="read-write" />
     			 <key column="PARTICLE_PK_ID" />
     			 <many-to-many class="gov.nih.nci.calab.domain.nano.characterization.BaseCharacterization" column="CHARACTERIZATION_PK_ID"/>
    	</set>
    	
     	<join table="BASE_PARTICLE">
    		<key column="PARTICLE_PK_ID" />
    		<property name="particleCategory" column="particle_category" type="java.lang.String" />
	   	</join>
	   	
   </subclass>
 </hibernate-mapping>   

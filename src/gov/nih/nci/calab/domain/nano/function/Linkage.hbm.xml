<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain.nano.function">
	<class name="Linkage" table="linkage" lazy="true"
		polymorphism="explicit">
		<cache usage="read-write" />
		<!--  
		<id name="id" type="java.lang.Long" column="linkage_pk_id"
			unsaved-value="0">
			<generator class="org.hibernate.id.TableHiLoGenerator">
				<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
			</generator>
		</id>
		-->
		<id name="id" type="java.lang.Long" column="linkage_pk_id">
			<generator class="foreign">
				<param name="property">agent</param>
			</generator>
		</id>
		<discriminator column="discriminator" type="java.lang.String" />
		<property name="description" type="java.lang.String"
			column="description" />

		<!--		<many-to-one name="agent" class="gov.nih.nci.calab.domain.nano.function.Agent" column="agent_pk_id" lazy="false" fetch="join" />  -->
		<one-to-one name="agent" class="gov.nih.nci.calab.domain.nano.function.Agent" constrained="true" lazy="false"/>		
		<subclass name="UnclassifiedLinkage"
			discriminator-value="Other" />

		<subclass name="Attachment" discriminator-value="Attachment">
			<property name="bondType" column="bond_type" />
		</subclass>

		<subclass name="Encapsulation"
			discriminator-value="Encapsulation">
			<property name="localization" column="localization" />
		</subclass>
	</class>
</hibernate-mapping>

<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<global>
		<constant>
			<constant-name>alphabetic</constant-name>
			<constant-value>^[a-zA-Z]*$</constant-value>
		</constant>
		<constant>
			<constant-name>numeric</constant-name>
			<constant-value>^[0-9]*$</constant-value>
		</constant>
		<constant>
			<constant-name>alphanumeric</constant-name>
			<constant-value>^[a-zA-Z0-9]*$</constant-value>
		</constant>
		<constant>
			<constant-name>zip</constant-name>
			<constant-value>^\d{5}(-\d{4})?$</constant-value>
		</constant>
		<constant>
			<constant-name>phone</constant-name>
			<constant-value>^[0-9()-]*$</constant-value>
		</constant>
		<constant>
			<constant-name>email</constant-name>
			<constant-value>^[a-zA-Z0-9\-\_\:\.]+@[a-zA-Z0-9\-\_\:\.]+\.[a-zA-Z]{2,3}$</constant-value>
		</constant>
		<constant>
			<constant-name>textFieldWhitelist</constant-name>
			<constant-value>^[a-zA-Z0-9\-\_\s\(\)\:\.]*$</constant-value>
		</constant>
	</global>
	<formset>
		<form name="loginForm">
			<field property="loginId" depends="required">
				<arg position="0" key="loginForm.loginId" />
			</field>
			<field property="password" depends="required">
				<arg position="0" key="loginForm.password" />
			</field>
		</form>
		<form name="updatePasswordForm">
			<field property="loginId" depends="required">
				<arg position="0" key="updatePasswordForm.loginId" />
			</field>
			<field property="password" depends="required">
				<arg position="0" key="updatePasswordForm.password" />
			</field>
			<field property="newPassword" depends="validwhenmatch">
				<arg position="0" key="updatePasswordForm.newPassword" />
				<var>
					<var-name>test</var-name>
					<var-value>
						((*this* != null) and (newPassword != password))
					</var-value>
				</var>
			</field>
			<field property="newPassword2" depends="validwhenmatch">
				<arg position="0" key="updatePasswordForm.newPassword2" />
				<var>
					<var-name>test</var-name>
					<var-value>
						((*this* != null) and (newPassword ==
						newPassword2))
					</var-value>
				</var>
			</field>
		</form>
		<form name="registerUserForm">
			<field property="firstName" depends="required">
				<arg position="0" key="registerUserForm.firstName" />
			</field>
			<field property="lastName" depends="required">
				<arg position="0" key="registerUserForm.lastName" />
			</field>
			<field property="email" depends="required,email">
				<arg position="0" key="registerUserForm.email" />
			</field>
			<field property="phone" depends="required">
				<arg position="0" key="registerUserForm.phone" />
			</field>
			<field property="organization" depends="required">
				<arg position="0" key="registerUserForm.organization" />
			</field>
			<field property="comment" depends="maxlength">
				<arg0 key="registerUserForm.comment" />
				<arg1 name="maxlength" key="${var:maxlength}" resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>4000</var-value>
				</var>
			</field>
		</form>
		<form name="transferOwnerForm">
			<field property="currentOwner" page="1" depends="required">
				<arg position="0" key="transferOwnerForm.currentOwner" />
			</field>
			<field property="newOwner" page="1" depends="validwhenmatch">
				<arg position="0" key="transferOwnerForm.newOwner" />
				<var>
					<var-name>test</var-name>
					<var-value>
						((*this*!=null) and (newOwner!=currentOwner))
					</var-value>
				</var>
			</field>
			<field property="dataType" page="1" depends="required">
				<arg position="0" key="transferOwnerForm.dataType" />
			</field>
		</form>
		<!-- to be removed after 1.5.2 -->
		<form name="updateCreatedByForm">
			<field property="currentCreatedBy" page="1" depends="required">
				<arg position="0" key="updateCreatedByForm.currentCreatedBy" />
			</field>
			<field property="newCreatedBy" page="1" depends="required">
				<arg position="0" key="updateCreatedByForm.newCreatedBy" />
				<var>
					<var-name>test</var-name>
					<var-value>
						((*this*!=null) and (newCreatedBy!=currentCreatedBy))
					</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>

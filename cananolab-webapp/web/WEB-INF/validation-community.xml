<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="collaborationGroupForm">
			<field property="group.name" page="1" depends="required">
				<arg position="0" key="group.name" bundle="community" />
			</field>
			<field property="group.theUserAccessibility.userBean.loginName"
				page="2" depends="required">
				<arg position="0" key="group.theUserAccessibility.userBean.loginName"
					bundle="community" />
			</field>
			<field property="group.theUserAccessibility.roleName" page="2"
				depends="required">
				<arg position="0" key="group.theUserAccessibility.roleName"
					bundle="community" />
			</field>
		</form>
	</formset>
</form-validation>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.common" auto-import="false">
	<class name="Datum" table="datum" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="datum_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<discriminator column="discriminator" type="string"/>
		<!-- Attributes mapping for the Datum class -->
		<property name="createdBy" type="string" column="created_by"/>
		<property name="createdDate" type="java.util.Date" column="created_date"/>
		<property name="name" type="string" column="name"/>
		<property name="value" type="double" column="value"/>
		<property name="valueType" type="string" column="value_type"/>
		<property name="valueUnit" type="string" column="value_unit"/>
		<!-- Associations mapping for the Datum class -->
		<many-to-one name="sample" class="gov.nih.nci.cananolab.domain.common.Sample" column="sample_pk_id" lazy="proxy" />
		<set name="experimentCollection" table="experiment_datum" lazy="true" inverse="false">
			<cache usage="read-write" />
			<key column="datum_pk_id" />
			<many-to-many class="gov.nih.nci.cananolab.domain.common.Experiment" column="experiment_pk_id" />
		</set>
		<set name="conditionCollection" table="datum_condition" lazy="true" inverse="false" cascade="save-update">
			<cache usage="read-write" />
			<key column="datum_pk_id" />
			<many-to-many class="gov.nih.nci.cananolab.domain.common.Condition" column="condition_pk_id" />
		</set>
		<many-to-one name="resultFile" class="gov.nih.nci.cananolab.domain.common.ResultFile" column="file_pk_id" lazy="proxy" />
		<subclass name="gov.nih.nci.cananolab.domain.characterization.invivo.InvivoParameter" discriminator-value="InvivoParameter">
			<!-- Associations mapping for the InvivoParameter class -->
			<join table="invivo_parameter_anatomic_site" inverse="false" optional="true">
				<key column="invivo_parameter_pk_id" />
				<many-to-one name="anatomicSite" column="anatomic_site_pk_id" not-null="true"/>
			</join>
			<subclass name="gov.nih.nci.cananolab.domain.characterization.invivo.PharmacokineticsParameter" discriminator-value="PharmacokineticsParameter">
				<!-- Associations mapping for the PharmacokineticsParameter class -->
				<join table="pharmacokinetics_parameter_material" inverse="false" optional="true">
					<key column="pk_parameter_pk_id" />
					<many-to-one name="material" column="material_pk_id" not-null="true"/>
				</join>

			</subclass>

		</subclass>
	</class>
</hibernate-mapping>

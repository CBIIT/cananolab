<?xml version="1.0" encoding="utf-8" ?>
<project name="caNanoLab" default="build-application" basedir=".">
	<property file="build.properties" />
	<property name="src.dir" value="${basedir}/src" />
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="conf.dir" value="${basedir}/conf" />
	<property name="webroot.dir" value="${basedir}/web" />
	<property name="webapp.lib.dir" value="${webroot.dir}/WEB-INF/lib" />
	<property name="build.dir" value="${basedir}/build" />
	<property name="tmp.dir" value="${build.dir}/tmp" />

	<import file="build-deploy.xml" />
	<import file="build-grid.xml" />

	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
		<classpath>
			<pathelement location="${lib.dir}/cagrid/ant-contrib-1.0b3.jar" />
		</classpath>
	</taskdef>

	<target name="clean">
		<delete dir="${build.dir}" quiet="true" />
	</target>

	<target name="init-application">
		<!-- create the necessary folders -->
		<mkdir dir="${build.dir}" />
		<mkdir dir="${tmp.dir}" />
		<mkdir dir="${tmp.dir}/WEB-INF" />
		<mkdir dir="${tmp.dir}/WEB-INF/classes" />
		<mkdir dir="${tmp.dir}/WEB-INF/lib" />
	</target>

	<target name="compile" depends="clean, init-application">
		<echo message="*****************************************************" />
		<echo message="**   Compiling Java Classes ...          		  **" />
		<echo message="*****************************************************" />
		<path id="cp">
			<fileset dir="${webapp.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${lib.dir}">
				<include name="**/*.jar" />
			</fileset>
		</path>
		<javac srcdir="${src.dir}" destdir="${tmp.dir}/WEB-INF/classes" debug="true">
			<classpath refid="cp" />
		</javac>

		<!--copy properties files -->
		<copy todir="${tmp.dir}/WEB-INF/classes">
			<fileset dir="${src.dir}">
				<include name="**/*.properties" />
				<exclude name="caNanoLab.properties" />
			</fileset>
		</copy>

		<!--copy wsdd file -->
		<copy todir="${tmp.dir}/WEB-INF/classes" file="${src.dir}/client-config.wsdd" />

		<copy overwrite="true" todir="${tmp.dir}/WEB-INF/classes" file="${src.dir}/caNanoLab.properties.template">
			<!-- replace tokens with values from build properties -->
			<filterset>
				<filter token="FILE_REPOSITORY_DIR" value="${file.repository.dir}" />
				<filter token="APP_OWNER" value="${application.owner}" />
				<filter token="GRID_INDEX_SERVER" value="${grid.indexserver}" />
			</filterset>
		</copy>
		<move file="${tmp.dir}/WEB-INF/classes/caNanoLab.properties.template" tofile="${tmp.dir}/WEB-INF/classes/caNanoLab.properties" />

		<!--copy xml files -->
		<copy todir="${tmp.dir}/WEB-INF/classes">
			<fileset dir="${src.dir}">
				<include name="**/*.xml" />
			</fileset>
		</copy>

		<!-- copy web files and lib files -->
		<copy todir="${tmp.dir}">
			<fileset dir="${webroot.dir}">
				<exclude name="**/*.mex" />
				<exclude name="**/WEB-INF/classes/**" />
			</fileset>
		</copy>

		<!-- copy lib files from ${lib.dir} -->
		<copy todir="${tmp.dir}/WEB-INF/lib">
			<fileset dir="${lib.dir}/cagrid">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${lib.dir}/globus">
				<include name="*.jar" />
			</fileset>
		</copy>
	</target>

	<target name="build-application" depends="compile">
		<!-- tag footer with release version and build tag -->
		<property file="${tmp.dir}/WEB-INF/classes/version.properties" />
		<property name="build_tag" value="dev" />
		<propertyregex override="true" property="build_tag" input="${build.tag}" regexp="\$HeadURL\: .*/calab/cananolab/tags/([^/]*)/.*" select="\1" />

		<replaceregexp file="${tmp.dir}/html/nciFooter.html" match="\{CANANOLAB_RELEASE_VERSION\}" replace="${release.version}" flags="g" />
		<replaceregexp file="${tmp.dir}/html/nciFooter.html" match="\{CANANOLAB_BUILD_TAG\}" replace="${build_tag}" flags="g" />

		<!-- package WAR file -->
		<jar destfile="${build.dir}/caNanoLab.war" basedir="${tmp.dir}" />
		<copy todir="${build.dir}">
			<fileset dir="${conf.dir}/csm/">
				<include name="*.war" />
			</fileset>
		</copy>

		<!-- remove tmp directory -->
		<delete dir="${tmp.dir}" quiet="true" />
	</target>

	<target name="initialize-passwords" depends="compile">
		<!-- use connection pool for SDK database connection-->
		<replaceregexp file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" match=".*java\:\/caNanoLab.*" replace="" flags="g" />
		<!-- replace database connection info -->
		<replace file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" token="DATABASE_HOST" value="${database.host}" />
		<replace file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" token="DATABASE_PORT" value="${database.port}" />
		<replace file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" token="DATABASE_USER" value="${database.user}" />
		<replace file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" token="DATABASE_PASSWORD" value="${database.password}" />
		<replaceregexp file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" match=".*@DB_CONNECTION_POOL_BEGIN@.*" replace="" flags="g" />
		<replaceregexp file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" match=".*@DB_CONNECTION_POOL_END@.*" replace="" flags="g" />
		<replaceregexp file="${tmp.dir}/WEB-INF/classes/hibernate.cfg.xml" match=".*java\:\/caNanoLab.*" replace="" flags="g" />

		<!-- use connection pool for CSM database connection-->
		<copy todir="${tmp.dir}/conf">
			<fileset dir="${conf.dir}/csm/">
				<include name="*.xml" />
			</fileset>
		</copy>

		<copy todir="${tmp.dir}/WEB-INF/lib">
			<fileset dir="${lib.dir}">
				<include name="log4j.jar" />
			</fileset>
			<fileset dir="${conf.dir}">
				<include name="*.jar" />
			</fileset>
		</copy>

		<replace file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" token="DATABASE_HOST" value="${database.host}" />
		<replace file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" token="DATABASE_PORT" value="${database.port}" />
		<replace file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" token="DATABASE_USER" value="${database.user}" />
		<replace file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" token="DATABASE_PASSWORD" value="${database.password}" />
		<replaceregexp file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" match=".*@DB_CONNECTION_POOL_BEGIN@.*" replace="" flags="g" />
		<replaceregexp file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" match=".*@DB_CONNECTION_POOL_END@.*" replace="" flags="g" />
		<replaceregexp file="${tmp.dir}/conf/caNanoLab.csm.hibernate.cfg.xml" match=".*java\:caNanoLab.*" replace="" flags="g" />

		<!-- specify directory for CSM hibernate config file location -->
		<replace file="${tmp.dir}/conf/ApplicationSecurityConfig.xml" token="JBOSS_CONF_DIR" value="${tmp.dir}/conf" />

		<path id="class.path">
			<fileset dir="${tmp.dir}/WEB-INF/lib">
				<include name="**/*.jar" />
			</fileset>
			<pathelement path="${tmp.dir}/WEB-INF/classes" />
		</path>

		<java classname="gov.nih.nci.cananolab.service.security.LoginService" fork="true">
			<classpath refid="class.path" />
			<sysproperty key="gov.nih.nci.security.configFile" value="${tmp.dir}/conf/ApplicationSecurityConfig.xml" />
		</java>

		<!-- remove tmp directory -->
		<delete dir="${tmp.dir}" quiet="true" />
	</target>
</project>
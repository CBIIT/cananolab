<project name="caarray" default="blah" basedir="..">
        <property name="lib.dir" value="${basedir}/lib" />
        <path id="project.classpath">
                <fileset dir="${lib.dir}">
                        <include name="**/*.jar" />
                </fileset>
        </path>

        <target name="blah">
                <taskdef name="xmlconfig"
                        classname="com.xmlconfig.anttask.XmlConfig"
                        classpathref="project.classpath" />

                <xmlconfig in="build/ds.xml" verbose="true">
                        <update
                                path="//datasources/local-tx-datasource/connection-url"
                                value="jdbc:mysql://${database.server}:${database.port}/${database.name}" />
                               
                        <insert name="s1" value="Mahi" type="attribute" path="//datasources/ssss/s1" />
                </xmlconfig>
        </target>
</project>
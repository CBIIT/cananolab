<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain">
  <class name="Sample" table="sample" lazy="true" polymorphism="explicit" discriminator-value="null">
    <cache usage="read-write" />
    <id name="id" type="java.lang.Long" column="sample_pk_id" unsaved-value="0">
      <generator class="org.hibernate.id.TableHiLoGenerator">
  	  			<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
	   </generator>
    </id>
    <discriminator column="type" type="java.lang.String" />
    
    <property name="sampleSequenceId" type="java.lang.Long" column="sample_sequence_id" />
    <property name="name" type="java.lang.String" column="sample_name" />
    <property name="description" type="java.lang.String" column="description" />
    <property name="type" type="java.lang.String" column="sample_type" />
    <property name="sourceSampleId" type="java.lang.String" column="source_sample_id" />
    <property name="solubility" type="java.lang.String" column="solubility_description" />
    <property name="lotId" type="java.lang.String" column="lot_id" />
    <property name="lotDescription" type="java.lang.String" column="lot_description" />
    <property name="comments" type="java.lang.String" column="general_comments" />
    <property name="createdBy" type="java.lang.String" column="created_by" />
    <property name="createdDate" type="java.util.Date" column="created_date" />
    <property name="receivedBy" type="java.lang.String" column="received_by" />
    <property name="receivedDate" type="java.util.Date" column="received_date" />
    
    <many-to-one name="source"  class="gov.nih.nci.calab.domain.Source" column="source_pk_id" lazy="false" fetch="join"/>
    <many-to-one name="sampleSOP" class="gov.nih.nci.calab.domain.SampleSOP" column="sample_sop_pk_id" />
    <set name="sampleContainerCollection" cascade="all-delete-orphan" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="sample_pk_id" />
      <one-to-many class="gov.nih.nci.calab.domain.SampleContainer" />
    </set>
    <!-- 
    <set name="reportCollection" table="sample_report" cascade="all-delete-orphan" lazy="true" inverse="false">
      <cache usage="read-write" />
      <key column="sample_pk_id" />
      <many-to-many class="gov.nih.nci.calab.domain.Report" column="file_pk_id" />
    </set>
    <set name="associatedFileCollection" table="sample_associated_file" cascade="all-delete-orphan" lazy="true" inverse="false">
      <cache usage="read-write" />
      <key column="sample_pk_id" />
      <many-to-many class="gov.nih.nci.calab.domain.AssociatedFile" column="associated_file_pk_id" />
    </set>
    -->
  </class>
</hibernate-mapping>


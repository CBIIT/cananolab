<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.cananolab.domain.particle.samplecomposition" auto-import="false">
	<class name="SampleComposition" table="composition" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="composition_pk_id">
			<generator class="hilo">
                          <param name="table">hibernate_unique_key</param>
                          <param name="column">next_hi</param>
                        </generator>
		</id>
		<!-- Associations mapping for the SampleComposition class -->
		<set name="labFileCollection" table="composition_lab_file" lazy="true" inverse="false" cascade="all-delete-orphan">
			<cache usage="read-write" />
			<key column="composition_pk_id" />
			<many-to-many class="gov.nih.nci.cananolab.domain.common.LabFile" column="file_pk_id" />
		</set>
		<set name="nanoparticleEntityCollection" lazy="true" inverse="true">
			<cache usage="read-write" />
			<key column="composition_pk_id" />
			<one-to-many class="gov.nih.nci.cananolab.domain.particle.samplecomposition.base.NanoparticleEntity"/>
		</set>
		<set name="functionalizingEntityCollection" lazy="true" inverse="true">
			<cache usage="read-write" />
			<key column="composition_pk_id" />
			<one-to-many class="gov.nih.nci.cananolab.domain.particle.samplecomposition.functionalization.FunctionalizingEntity"/>
		</set>
		<set name="chemicalAssociationCollection" lazy="true" inverse="false" cascade="all-delete-orphan">
			<cache usage="read-write" />
			<key column="composition_pk_id" />
			<one-to-many class="gov.nih.nci.cananolab.domain.particle.samplecomposition.chemicalassociation.ChemicalAssociation"/>
		</set>
		<many-to-one name="nanoparticleSample" class="gov.nih.nci.cananolab.domain.particle.NanoparticleSample" column="particle_sample_pk_id" unique="true" lazy="proxy" cascade="save-update"/>
	</class>
</hibernate-mapping>
